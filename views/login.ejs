<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connexion</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
  </head>

  <body data-theme="light" id="centeredBody">
    <%- include('header', {cartSize, isLoggedIn}) %>
    <a id="backButton" href="/">Retour</a>
    <h1 id="connexionTitle">Connexion</h1>

    <form id="loginForm" data-shown="true">
      <input
        type="text"
        placeholder="Pseudo"
        id="loginUsername"
        name="username"
        required
      />

      <span class="passwordBlock">
        <input
          type="password"
          placeholder="Mot de passe"
          id="loginPassword"
          name="password"
          required
        />

        <svg
          title="afficher/cacher le mot de passe"
          data-status="hidden"
          class="passVisToggle"
          onclick="togglePassVis()"
          height="1em"
          viewBox="0 0 640 512"
        >
          <path
            d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"
          />
          ;
        </svg>
      </span>
      <a id="forgottenPassLink" href="/account/forgottenPass"
        >Mot de passe oublié</a
      >

      <input class="button" type="submit" value="Se connecter" />
      <p class="formToggle" onclick="toggleForms()">
        Tu n'as pas de compte ? Inscris-toi
      </p>
    </form>

    <form class="registerForm nonInfo" data-shown="false">
      <input type="text" id="name" placeholder="Nom" />
      <input class="button" type="submit" value="Continuer sans compte" />
    </form>

    <% if(verifiedRegisterEmail) { %>
    <form class="registerForm" data-shown="false">
      <input
        type="text"
        placeholder="Pseudo"
        id="username"
        name="username"
        required
      />

      <span class="passwordBlock">
        <input
          type="password"
          placeholder="Mot de passe"
          id="registerPassword"
          name="password"
          required
        />

        <svg
          title="afficher/cacher le mot de passe"
          data-status="hidden"
          class="passVisToggle"
          onclick="togglePassVis()"
          height="1em"
          viewBox="0 0 640 512"
        >
          <path
            d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"
          />
          ;
        </svg>
      </span>

      <span style="display: flex; align-items: center; margin-bottom: 9px">
        <input
          type="checkbox"
          id="legal"
          required
          style="width: 1em; height: 1em; margin: 0 8px"
        />
        <label for="legal"
          >J'ai lu et accepté les <a href="/legal">mentions légales</a>.</label
        >
      </span>

      <span id="gpTp">
        <label id="gpTpLabel" for="category">Groupe TP:</label>
        <select id="category" name="category" required>
          <option value="11A">11A</option>
          <option value="11B">11B</option>
          <option value="12C">12C</option>
          <option value="12D">12D</option>
          <option value="21A">21A</option>
          <option value="21B">21B</option>
          <option value="22C">22C</option>
          <option value="22D">22D</option>
          <option value="31A">31A</option>
          <option value="31B">31B</option>
          <option value="32C">32C</option>
          <option value="32D">32D</option>
        </select>
      </span>

      <input class="button" type="submit" value="Créer un compte" />
      <p class="formToggle" onclick="toggleForms()">
        Tu as déjà un compte ? Connectes-toi
      </p>
    </form>
    <% } else { %>
    <form class="registerForm emailSubmit" data-shown="false">
      <div id="emailFormInputs">
        <input
          type="email"
          placeholder="Adresse mail univ-lemans.fr"
          id="email"
          name="email"
          required
          pattern=".+@univ-lemans\.fr"
        />
      </div>

      <input
        class="button"
        type="submit"
        value="Envoyer un mail de confirmation"
        id="validateEmailButton"
      />
      <p class="formToggle" onclick="toggleForms()">
        Tu as déjà un compte? Connectes-toi
      </p>
    </form>
    <% } %>
    <script>
      if ('<%= verifiedRegisterEmail %>') {
        toggleForms();
      }

      //if the url contains a return url to /pay, add a way to only enter a name
      var urlParams = new URLSearchParams(window.location.search);
      var returnUrl = urlParams.get('returnUrl');

      if (returnUrl && returnUrl === '/pay') {
        const nonInfoToggle = document.createElement('p');
        nonInfoToggle.classList.add('formToggle');
        nonInfoToggle.classList.add('nonInfoToggle');
        nonInfoToggle.innerHTML = 'Continuer sans compte';

        nonInfoToggle.onclick = function () {
          const registerForm = document.querySelector('.registerForm.nonInfo');
          registerForm.setAttribute(
            'data-shown',
            registerForm.getAttribute('data-shown') === 'true'
              ? 'false'
              : 'true'
          );
          nonInfoToggle.innerHTML =
            nonInfoToggle.innerHTML === 'Continuer sans compte'
              ? 'Annuler'
              : 'Continuer sans compte';

          //set all input from loginForm to to disabled
          const loginForm = document.getElementById('loginForm');
          const loginFormInputs = loginForm.querySelectorAll('input');
          loginFormInputs.forEach((input) => {
            input.toggleAttribute('disabled');
          });
        };

        document.getElementById('loginForm').appendChild(nonInfoToggle);
      }

      function toggleForms() {
        const loginForm = document.getElementById('loginForm');
        const registerForm = document.querySelector(
          '.registerForm:not(.nonInfo)'
        );
        loginForm.setAttribute(
          'data-shown',
          loginForm.getAttribute('data-shown') === 'true' ? 'false' : 'true'
        );
        registerForm.setAttribute(
          'data-shown',
          registerForm.getAttribute('data-shown') === 'true' ? 'false' : 'true'
        );
      }
    </script>
    <script src="/js/main.js"></script>
    <!-- main.js is for the login/registration scripts -->
    <script src="/js/logic.js"></script>
  </body>
</html>
